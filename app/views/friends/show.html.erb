<div class="container-fluid bg-dark text-light p-5">
  <div class="container bg-dark p-5">
    <h1 class="display-4"><%= @friend.first_name %>  <%= @friend.last_name %> </h1>
    <hr>
    <p>
      <strong>Email:</strong>
      <%= mail_to @friend.email, class:"email-to" %>
    </p>
    <p>
      <strong>Phone:</strong>
      <%= phone_to @friend.phone %>
    </p>
    <p>
      <strong>Twitter:</strong>
      <%= @friend.twitter %>
    </p>
    <p>
      <%= link_to "Edit friend", edit_friend_path(@friend), class:"btn btn-secondary" %>
      <%= link_to "Back to friends", friends_path, class:"btn btn-secondary"  %>
      <%= link_to "Delete Friend", @friend, method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    </p>
  </div>
