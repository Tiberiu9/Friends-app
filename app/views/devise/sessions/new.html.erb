<div class=" container d-flex justify-content-center align-items-center">
  <div class=" card col-12 col-md-7 col-lg-5 col-xl-4 text-center">
    <h2 class="card-header fw-bold text-uppercase text-center">Login</h2>
    <div class="card-body text-center">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field mb-3">
          <%= f.label :email, class:"form-label" %><br/>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control d-inline-flex p-2"%>
        </div>
        <div class="field mb-3">
          <%= f.label :password, class:"form-label" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="form-check d-flex  justify-content-md-center">
            <%= f.check_box :remember_me, class:"form-check-input " %>
            <%= f.label :remember_me, class:"form-check-label mx-2 mb-1" %>
          </div>
        <% end %>
        <div class="actions d-grid  justify-content-md-center">
          <%= f.submit "Log in", class:"btn btn-dark"%>
        </div>
      <% end %>
      <hr>
      <div class="d-grid gap-2 justify-content-md-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>